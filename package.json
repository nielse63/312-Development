{
  "name": "312-development",
  "version": "1.0.0",
  "description": "My personal website",
  "author": "Erik Nielsen <erik@312development.com>",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development node build/dev-server.js",
    "build": "./bin/build",
    "unit": "./bin/unit-test",
    "daemon:start": "pm2 start server/index.js",
    "daemon:kill": "pm2 kill",
    "integration": "./bin/integration",
    "preaccessibility": "yarn run daemon:start",
    "accessibility": "node test/accessibility/runner.js",
    "lint:js": "eslint --ext .js,.vue src server ./*.js",
    "lint:internal": "eslint tasks test *.js --ignore-pattern '!.*.js'",
    "lint:scss": "stylelint src/**/*.vue src/assets/**/*.scss --config .stylelintrc.js --syntax scss",
    "start": "cross-env NODE_ENV=production node --harmony --gc_global --optimize_for_size --max_old_space_size=460 --gc_interval=100 server",
    "heroku-postbuild": "yarn run build"
  },
