{
  "name": "312-development",
  "version": "1.0.0",
  "description": "My personal website",
  "author": "Erik Nielsen <erik@312development.com>",
  "private": true,
  "scripts": {
    "predev": "rm -rf ./.logs && mkdir .logs",
    "vue": "cross-env NODE_ENV=development node build/dev-server.js",
    "backend": "pm2 startOrRestart pm2.config.js --only back-end",
    "dev": "yarn run backend | yarn run vue",
    "build": "cross-env NODE_ENV=production ./bin/build",
    "unit": "cross-env BABEL_ENV=test karma start test/unit/karma.conf.js",
    "e2e": "node test/e2e/runner.js",
    "test": "yarn run unit && yarn run e2e",
    "coverage": "cat test/unit/coverage/lcov.info | coveralls",
    "lint:js": "eslint --ext .js,.vue src server ./*.js",
    "lint:internal": "eslint tasks test/unit test/e2e",
    "lint:scss": "stylelint src/**/*.vue src/assets/**/*.scss --config .stylelintrc.js --syntax scss",
    "clean-logs": "rm -rf ./.logs/* ./*.log",
    "prestart": "yarn run build",
    "start": "cross-env NODE_ENV=production pm2 startOrRestart pm2.config.js --update-env",
    "poststart": "pm2 logs all",
    "stop": "pm2 stop all; pm2 kill",
    "poststop": "yarn run clean-logs",
    "postinstall": "if [ $IS_HEROKU ]; then yarn run build; fi"
  },
