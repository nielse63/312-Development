{
  "name": "312-development",
  "version": "2.0.0",
  "description": "My personal website",
  "author": "Erik Nielsen <erik@312development.com>",
  "private": true,
  "scripts": {
    "build": "cross-env NODE_ENV=production node build/build",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --hot",
    "start": "http-server dist/ --gzip --robots 'User-agent: *\nAllow: /\nSitemap: /sitemap.xml' --no-dotfiles -p 3000",
    "lint:js": "eslint --ext .js,.vue ./*.js src/ --fix --cache",
    "prelint:scss": "stylelint 'src/**/*.scss' -s scss --fix --cache",
    "lint:scss": "stylelint 'src/**/*.vue' -s scss --cache",
    "pretest": "yarn run build",
    "test": "cross-env NODE_ENV=test node test/runner.js"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.7",
    "@fortawesome/fontawesome-free-solid": "^5.0.12",
