{
  "name": "312-development",
  "version": "1.0.0",
  "description": "My personal website",
  "author": "Erik Nielsen <erik@312development.com>",
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "dev": "webpack-dashboard -- node build/dev-server.js",
    "build": "./bin/build",
    "unit": "./bin/unit-test",
    "daemon:start": "pm2 start server/index.js --watch server/",
    "daemon:kill": "pm2 kill",
    "integration": "./bin/integration",
    "lint:js": "eslint --ext .js,.vue src/ server/ ./*.js --fix --cache",
    "lint:internal": "eslint test/ ./*.js --ignore-pattern '!.*.js' --fix --cache",
    "lint:scss": "stylelint 'src/**/*.{vue,scss}' -s scss --cache",
    "start": "DEBUG=frontend* NODE_ENV=production node --harmony --max_old_space_size=460 --gc_interval=100 server",
    "heroku-postbuild": "yarn run build"
  },
  "dependencies": {
    "autoprefixer": "^8.4.1",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "body-parser": "^1.17.2",
    "compression": "^1.7.2",
    "compression-webpack-plugin": "^1.1.11",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "d3-array": "^1.2.1",
    "d3-scale": "^2.0.0",
    "d3-selection": "^1.3.0",
    "d3-timer": "^1.0.7",
    "date-fns": "^1.29.0",
    "debug": "^3.1.0",
    "express": "^4.16.3",
    "express-static-gzip": "^0.3.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "helmet": "^3.12.0",
    "heroku-ssl-redirect": "^0.0.4",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.9.0",
    "nodemailer": "^4.6.4",
    "nodemailer-mailgun-transport": "^1.3.6",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "ora": "^2.1.0",
    "sass-loader": "^6.0.7",
    "serve-static": "^1.13.2",
    "sw-precache-webpack-plugin": "^0.11.5",
    "twitter-node-client": "^0.0.6",
    "url-loader": "^1.0.1",
    "vue": "^2.5.16",
    "vue-loader": "^14.2.1",
    "vue-router": "^3.0.1",
    "vue-style-loader": "^4.1.0",
    "vue-svg-loader": "^0.5.0",
    "vue-template-compiler": "^2.5.16",
    "vuex": "^3.0.1",
    "webpack": "3.10.0",
    "webpack-merge": "^4.1.2"
  },
  "devDependencies": {
    "@mapbox/stylelint-processor-arbitrary-tags": "^0.2.0",
    "ava": "^0.25.0",
    "chai": "^4.1.1",
    "connect-history-api-fallback": "^1.5.0",
    "coveralls": "^3.0.0",
    "cross-spawn": "^6.0.5",
    "dotenv": "^5.0.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-import-resolver-webpack": "^0.9.0",
    "eslint-plugin-html": "^4.0.3",
    "eslint-plugin-import": "^2.11.0",
    "eventsource-polyfill": "^0.9.6",
    "http-proxy-middleware": "^0.18.0",
    "husky": "^0.14.3",
    "inject-loader": "^4.0.1",
    "karma": "^2.0.2",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "^0.0.32",
    "karma-webpack": "^3.0.0",
    "lint-staged": "^7.0.5",
    "lolex": "^2.3.2",
    "mocha": "^5.1.1",
    "pm2": "^2.10.3",
    "puppeteer": "^1.3.0",
    "snyk": "^1.78.0",
    "stylelint": "^9.2.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-processor-html": "^1.0.0",
    "stylelint-scss": "^3.1.0",
    "webpack-dashboard": "^1.1.1",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.22.1"
  },
  "engines": {
    "node": ">= 10.x.x",
    "npm": ">= 5.6.x",
    "yarn": ">= 1.x.x"
  },
  "browserslist": [
    "> 3%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "ava": {
    "files": [
      "test/integration/*.spec.js"
    ],
    "source": [
      "src/**/*.{js,jsx}"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "powerAssert": false,
    "babel": "inherit",
    "verbose": true,
    "require": [
      "babel-register"
    ]
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --fix",
      "git add"
    ],
    "*.vue": [
      "stylelint",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  }
}
