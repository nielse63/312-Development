#!/usr/bin/env bash
set -e

# set default env vars
if [ ! "$NODE_ENV" ]; then
  export NODE_ENV=test
fi

# print environment information
. bin/print-env

# build on travis
if [ "$TRAVIS" ]; then
  yarn run build
else
  node_modules/.bin/eslint test/integration --fix
fi

node test/integration/runner.js
